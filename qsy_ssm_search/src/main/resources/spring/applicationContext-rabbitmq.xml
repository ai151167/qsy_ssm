<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:rabbit="http://www.springframework.org/schema/rabbit"
	xsi:schemaLocation="http://www.springframework.org/schema/rabbit
	http://www.springframework.org/schema/rabbit/spring-rabbit-1.7.xsd
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
	<!-- 生产者信息传入端 -->
	<!-- 定义rabbitmq连接工厂 -->
	<rabbit:connection-factory id="connectionFactory"
		host="192.168.136.132" port="5672" username="qsy" password="qsy"
		virtual-host="/qsy" />

	<!-- 定义MQ的管理包括队列，交换机 -->
	<rabbit:admin connection-factory="connectionFactory" />

	<!-- 定义队列，自动声明 ，并且持久化 -->
	<rabbit:queue name="searchQueue" auto-declare="true"
		durable="true" />
	<rabbit:queue name="delByIdQueue" auto-declare="true"
		durable="true" />
	<rabbit:queue name="deleteQueue" auto-declare="true"
		durable="true" />

	<rabbit:direct-exchange name="directExchange"
		auto-declare="true">
		<rabbit:bindings>
			<rabbit:binding queue="searchQueue" key="search" />
			<rabbit:binding queue="delByIdQueue" key="delById" />
			<rabbit:binding queue="deleteQueue" key="delete" />
		</rabbit:bindings>
	</rabbit:direct-exchange>

	<rabbit:template id="amqpTemplate" connection-factory="connectionFactory"
		exchange="directExchange" />

	<bean id="messageHandler" class="com.qsy.ssm.searchhandler.ListenSearch" />

	<rabbit:listener-container
		connection-factory="connectionFactory">
		<rabbit:listener ref="messageHandler" method="messagerHandler"
			queue-names="searchQueue" />
		<rabbit:listener ref="messageHandler" method="delByIdmessagerHandler"
			queue-names="delByIdQueue" />
		<rabbit:listener ref="messageHandler" method="deletemessagerHandler"
			queue-names="deleteQueue" />
	</rabbit:listener-container>


</beans>
